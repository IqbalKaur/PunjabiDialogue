@model PunjabiDialogueTalk.Models.Comment

@using (Html.BeginForm("CreateComment", "Home")) 
{
    @Html.AntiForgeryToken()
    @Html.Hidden("DialogueId", ViewData["DialogueId"])
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Comment" class="btn btn-default" />
            </div>
        </div>

        @*@if (ViewData["ErrorUploadingComment"] != null)
        {
            <div class="red">
                <p><strong>ErrorUploading:</strong>@ViewData["ErrorUploadingComment"].ToString()</p>
            </div>
        }
        @if (TempData["SuccessComment"] != null)
        {
            <div class="green">
                <p><strong>Success:</strong>@TempData["SuccessComment"].ToString()</p>
            </div>
        }*@
    </div>
}